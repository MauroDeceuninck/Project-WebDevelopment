@model IEnumerable<Project.Models.Product>

<h2>Edit Product Prices</h2>

<form asp-action="UpdatePrices" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td><input type="number" step="0.01" name="productPrices[@product.ProductId]" value="@product.Price" /></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Update Prices</button>
</form>

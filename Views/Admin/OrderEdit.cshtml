@model Project.Models.Order

<h2>Edit Order</h2>

<form asp-action="OrderEdit" method="post">
    <!-- Include hidden input for UserId -->
    <input type="hidden" asp-for="UserId" />
    <!-- Include hidden input for Order Id -->
    <input type="hidden" asp-for="Id" />

    <!-- Include hidden inputs for existing order items -->
    @if (Model.OrderItems != null && Model.OrderItems.Any())
    {
        <form asp-action="OrderEdit" method="post">
            <!-- Include hidden input for UserId -->
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <!-- Include hidden input for Order Id -->
            <input type="hidden" name="Id" value="@Model.Id" />

            <!-- Include inputs for existing order items -->
            @foreach (var item in Model.OrderItems)
            {
                <div class="form-group">
                    <input type="hidden" name="OrderItems[@item.Id].Id" value="@item.Id" />
                    <input type="hidden" name="OrderItems[@item.Id].OrderId" value="@item.OrderId" />
                    <input type="hidden" name="OrderItems[@item.Id].ProductId" value="@item.ProductId" />
                    <label>Product Name: @item.Product.Name</label>
                    <input type="number" name="OrderItems[@item.Id].Quantity" value="@item.Quantity" class="form-control" />
                    <span asp-validation-for="OrderItems[@item.Id].Quantity" class="text-danger"></span>
                </div>
            }

            <button type="submit" name="action" value="SaveChanges" class="btn btn-primary">Save Changes</button>
        </form>
    }
    else
    {
        <p>No order items found.</p>
    }



    <!-- Add new product to the order -->
    <h3>Add New Product</h3>
    <div class="form-group">
        <label>Select Product:</label>
        <select name="NewProductId" class="form-control" asp-items="@ViewBag.ProductList"></select>
    </div>
    <div class="form-group">
        <label>Quantity:</label>
        <input type="number" name="NewQuantity" class="form-control" />
        <span asp-validation-for="NewQuantity" class="text-danger"></span>
    </div>
    <button type="submit" name="action" value="AddProduct" class="btn btn-primary">Add Product</button>
</form>
